<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_list_ranking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textSize="25dp"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/text_list_userid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/text_list_ranking"/>

        <TextView
            android:id="@+id/text_list_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temp"
            android:textSize="25dp"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/text_list_userid"/>

    </RelativeLayout>

</RelativeLayout>