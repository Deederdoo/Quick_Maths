<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_layout_border"
        android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/result_layout_rel_top"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

            <TextView
                android:id="@+id/text_result_correct_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#b4b4b4"
                android:text="Correct Answers"/>

            <TextView
                android:id="@+id/text_right_answer"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#32de2a"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_result_correct_answer"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/text_result_incorrect_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incorrect Answers"
                android:textSize="18sp"
                android:textColor="#b4b4b4" />

            <TextView
                android:id="@+id/text_wrong_answer"
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#de2a2a"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/text_result_incorrect_answer"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/result_layout_rel_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/text_score"
            android:text="66.66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:textColor="#b4b4b4"
            android:textSize="100dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/result_layout_rel_bot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp">

        <Button
            android:id="@+id/button_play_again"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Play Again"
            android:textColor="#b4b4b4"
            android:textSize="18sp"
            android:background="@drawable/button_border"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/button_submit_score"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Submit Score"
            android:layout_margin="10dp"
            android:textColor="#b4b4b4"
            android:textSize="18sp"
            android:background="@drawable/button_border"
            android:layout_below="@id/button_play_again"/>

            <Button
                android:id="@+id/button_result_home"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Home"
                android:layout_margin="10dp"
                android:textColor="#b4b4b4"
                android:textSize="18sp"
                android:background="@drawable/button_border"
                android:layout_below="@id/button_submit_score"/>

        </RelativeLayout>

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>