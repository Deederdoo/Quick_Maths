<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393939">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rel_layout_border"
        android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/scoreboard_layout_rel_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rel_layout_border"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/image_scoreboard_qplus"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/qplus"/>

        <Spinner
            android:id="@+id/spinner_scoreboard_difficulty"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:spinnerMode="dropdown"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoreboard_layout_rel_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreboard_layout_rel_top"
        android:layout_above="@id/scoreboard_layout_rel_bottom">

        <ListView
            android:id="@+id/list_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"/>

        <ProgressBar
            android:id="@+id/progress_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scoreboard_layout_rel_bottom"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/rel_layout_border"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_scoreboard_back"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_border"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:textColor="#b4b4b4"
            android:textSize="18sp"
            android:text="Home"/>

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>